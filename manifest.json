{
    "manifest_version": 3,
    "name": "Gold Price Fetcher",
    "version": "1.0",
    "description": "Fetch gold price from PNJ and display it in popup",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://giavang.pnj.com.vn/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  